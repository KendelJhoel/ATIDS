@model List<ParcialATIS.Models.Factura>

@{
    ViewData["Title"] = "Facturas - Administración";
}

<h1>Facturas</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID Factura</th>
            <th>Fecha</th>
            <th>Cliente</th>
            <th>Vehículo</th>
            <th>Total</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var factura in Model)
        {
            <tr>
                <td>@factura.IdFactura</td>
                <td>@factura.Fecha?.ToShortDateString()</td>
                <td>@factura.Cliente</td>
                <td>@factura.Marca @factura.Modelo (@factura.Placa)</td>
                <td>$@factura.Total?.ToString("F2")</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Detalle" asp-route-id="@factura.IdFactura">Ver</a>
                    <form method="post" asp-action="Eliminar" asp-route-id="@factura.IdFactura" class="d-inline">
                        <button class="btn btn-danger btn-sm" type="submit" onclick="return confirm('¿Estás seguro de eliminar esta factura?');">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

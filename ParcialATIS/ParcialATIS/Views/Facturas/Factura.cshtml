@model Factura

@{
    ViewData["Title"] = "Facturación";
}

<h2 class="text-center">Facturación</h2>

<form asp-action="Crear" method="post" class="form-horizontal">
    <div class="form-group">
        <label>Fecha</label>
        <input type="date" name="fecha" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Cliente</label>
        <select name="idCliente" class="form-control">
            @foreach (var cliente in ViewBag.Clientes)
            {
                <option value="@cliente.IdCliente">@cliente.Nombre</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Auto</label>
        <select name="idAuto" class="form-control">
            @foreach (var auto in ViewBag.Autos)
            {
                <option value="@auto.IdAuto">@auto.Marca</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Cantidad de días a rentar</label>
        <input type="number" name="dias" class="form-control" min="1" required />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Generar</button>
</form>

@model IEnumerable<ParcialATIS.Models.Auto>

@{
    ViewData["Title"] = "Autos Disponibles";
}

<h2 class="text-center mb-4" style="color: #44997e; font-weight: bold;">Autos Disponibles</h2>

<table class="table table-striped shadow-sm rounded" style="overflow: hidden; border-radius: 10px;">
    <thead class="text-white" style="background-color: #44997e;">
        <tr>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Placa</th>
            <th>Tipo</th>
            <th>Estado</th>
            <th>Costo por Día</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var auto in Model)
        {
            <tr>
                <td>@auto.Marca</td>
                <td>@auto.Modelo</td>
                <td>@auto.Placa</td>
                <td>@auto.Tipo</td>
                <td>@auto.Estado</td>
                <td>@auto.CostoDia?.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@auto.IdAuto" class="btn btn-sm" style="background-color: #44997e; color: white; font-weight: bold;">Editar</a>
                    <a asp-action="Delete" asp-route-id="@auto.IdAuto" class="btn btn-sm btn-danger" onclick="return confirm('¿Estás seguro de que deseas eliminar este auto?');" style="font-weight: bold;">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-end">
    <a asp-action="Crear" asp-controller="Autos" class="btn btn-sm" style="background-color: #28A745; color: white; font-weight: bold;">Agregar Auto</a>
</div>

<hr />